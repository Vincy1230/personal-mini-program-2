/* template/category/category.wxss */

.category-title {
    width: 100%;
    height: 60rpx;
    padding: 0 20rpx;
    margin-top: -10rpx;
    line-height: 60rpx;
    font-weight: bold;
    color: white;
    background-color: var(--subcolor);
}

.dishes {
    /* 左右两边一个一边靠边分布 */
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.dishes-part {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.dishes-pic {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}

.dishes-price {
    color: var(--maincolor);
    font-size: small;
    margin-top: 5rpx;
}

.dishes-count {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.count-btn {
    width: 45rpx;
    height: 45rpx;
    line-height: 45rpx;
    text-align: center;
    border-radius: 50%;
}

.count-number {
    width: 75rpx;
    height: 50rpx;
    margin: 0 15rpx;
    line-height: 50rpx;
    text-align: center;
    font-weight: bold;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #ccc;
}
